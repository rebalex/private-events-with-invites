<% content_for :title, "New user" %>

<h1>New user</h1>

<%= form_with model: @user, method: :post do |form| %>
  <%= form.label :username %>
  <%= form.text_field :username %><br />
  <%= form.label :email %> 
  <%= form.password_field :email %><br />
  <%= form.label :password %> 
  <%= form.text_field :password %><br />
  <%= submit_tag("Register") %>
  <% end %>

